---
import Layout from '../layouts/Layout.astro'
import MinimalLogo from '../components/MinimalLogo.astro'
---

<Layout title="Portfolio">
	<main
		class="w-full text-second flex flex-col items-center justify-center text-lg italic p-2 gap-10 rounded-md"
	>
		<MinimalLogo width={60} height={60} />

		<div class="flex flex-col w-[100vmin] gap-4">
			<div class="w-[60vmin] h-[2px] bg-second self-end"></div>

			<div class="w-[60vmin] h-[2px] bg-second self-center"></div>

			<div class="w-[60vmin] h-[2px] bg-second"></div>
		</div>
	</main>
</Layout>
