---
import Layout from '../layouts/Layout.astro'
import ProfileCard from '../components/ProfileCard'
import SkillsCard from '../components/SkillsCard'
import AboutCard from '../components/AboutCard'
import ExperienceSection from '../components/ExperienceSection'
import TechGrid from '../components/TechGrid'
import MinimalLogo from '../components/MinimalLogo'
import Footer from '../components/Footer'
---

<Layout title="Bogdan Raicu | Portfolio">
	<div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-[280px_1fr] gap-6 p-4 lg:p-8 lg:py-12">
		<!-- Sidebar -->
		<aside class="lg:sticky lg:top-8 lg:self-start flex flex-col gap-6">
			<ProfileCard client:load />
			<SkillsCard client:load />
		</aside>

		<!-- Main Content -->
		<div class="flex flex-col gap-6">
			<AboutCard client:load />

			<!-- Logo -->
			<div class="border-2 border-second p-6 flex justify-center">
				<div class="w-full max-w-[280px]">
					<MinimalLogo client:load />
				</div>
			</div>

			<ExperienceSection client:load />
			<TechGrid client:load />
			<Footer />
		</div>
	</div>
</Layout>
